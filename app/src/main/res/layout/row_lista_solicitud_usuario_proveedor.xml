<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="50dp"
                android:id="@+id/detailOrder"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/store"
                android:foreground="@drawable/selecion"
                android:layout_width="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Ver detalles"
                android:fontFamily="@font/futura"
                android:textSize="9dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Nombre del negocio : "
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lsBusinnes"
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:gravity="right"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Nombre del socio : "
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lsName"
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:gravity="right"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Apellidos : "
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lsLastName"
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:text="TelÃ©fono : "
                        android:fontFamily="@font/futura"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lsPhone"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:maxLength="11"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:text="Estado : "
                        android:fontFamily="@font/futura"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lsStatus"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>